<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextPlaceFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20pt"
            android:ems="10"
            android:hint="Откуда"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextPlaceTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5pt"
            android:ems="10"
            android:hint="Куда"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextDateDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5pt"
            android:ems="10"
            android:hint="Дата отправления"
            android:inputType="date"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextDateAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5pt"
            android:ems="10"
            android:hint="Дата прибытия"
            android:inputType="date"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextTimeDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5pt"
            android:ems="10"
            android:hint="Время отправления"
            android:inputType="time"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextTimeAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5pt"
            android:ems="10"
            android:hint="Время прибытия"
            android:inputType="time"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextAirportFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5pt"
            android:ems="10"
            android:hint="Аэропорт (откуда)"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextAirportTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5pt"
            android:ems="10"
            android:hint="Аэропорт (куда)"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextNumberTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5pt"
            android:ems="10"
            android:hint="Время в пути"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/button_save_reis"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5pt"
            android:minHeight="48dp"
            android:text="Сохранить рейс" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>